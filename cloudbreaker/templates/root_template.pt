<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
    <title>Cloud Breaker</title>
    <style>
    #machines {
        width:50%;
        float:left;
    }
    #hashes {
        width:50%;
        float:right;
    }
    th {
       padding: 15px;
    }
    td {
        text-align:center;
    }
    #submithash {
        text-align:center;
        margin-left:auto;
        margin-right:auto;
    }
    #title {
        text-align:center;
    }
    </style>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script>
    function update_hashes(data) {
        table = $('#hashes > table > tbody');
        table.html("");
        $.each(data, function(index, val) {
            toapp = "<tr>";
            toapp += "<td>" + val.hash + "</td>";
            toapp += "<td>" + val.type + "</td>";
            toapp += "<td>" + val.password + "</td>";
            toapp += "</tr>";
            table.append(toapp);
        });
    }

    function update_machines(data) {
        table = $('#machines > table > tbody');
        table.html("");
        $.each(data, function(index, val) {
            toapp = "<tr>";
            toapp += "<td>" + val.ip + "</td>";
            toapp += "<td>" + val.workshares + "</td>";
            toapp += "<td>" + val.openshares + "</td>";
            toapp += "<td>" + val.lastcontact + "</td>";
            toapp += "<td>" + val.uptime + "</td>";
            toapp += "</tr>";
            table.append(toapp);
        });
    }

    function update_spot_price(data) {
        $("#spotprice").html(data);
    }

    function update_page() {
        $.getJSON('/ajaxinfo', function(data) {
            console.log(data);
            update_hashes(data.hashes);
            update_machines(data.machines);
            update_spot_price(data.spotprice);
        });
    }

    update_page();
    setInterval(update_page, 3000);

    $(document).ready(function() {
        $("#submithashform").submit(function(event) {
            event.preventDefault();
            $.post("/submit", $("#submithashform").serialize(),function(data){})
            .fail(
                    function() {$("#submitreturn")
                        .html("An error occured submiting your hash").delay(5000).html("");}
            );
            $("input[name=hash]").val("");
        });
    });
    </script>
</head>
<body>
    <div id="title"><h1>Cloud Breaker</h1></div>
        <div id="machines">
        Spot price: <span id="spotprice"></span>
        <table>
        <thead>
            <tr>
            <th>IP</th><th>Complete Workshares</th><th>Open Workshares</th>
            <th>Last Contact</th><th>Uptime</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        </table>
    </div>
    <div id="hashes">
    <div id="submithash">
        <form id="submithashform">
            Add a new hash:
            <input type='text' name="hash">
            <select name="type">
                <option tal:repeat="hashtype hashtypes" value="${hashtype}">${hashtype}</option>
            </select>
            <select name="source">
                <option tal:repeat="source sources" value="${source}">${source}</option>
            </select>
            <button id="submitbutton">Add hash</button>
        </form>
        <div id="submitreturn">
        </div>
    </div>
    <table>
        <thead>
            <tr>
            <th>Hash</th><th>Hash Type</th><th>Password</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        </table>
    </div>
</body>
</html>
